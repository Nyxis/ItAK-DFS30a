{% for entry in sellableStocks %}
    <div>
        <h3>{{ entry.variant.type }} : {{ entry.variant.value }}</h3>
        <p>Stock disponible : {{ entry.sellableStock.quantity }}</p>
        <p>Disponible Ã  partir du : {{ entry.sellableStock.getAvailability()|date('Y-m-d H:i:s') }}</p>
