{# templates/product/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    <ul>
        {% for product in products %}
            <li>
                <a href="{{ path('product_detail', {id: product.id}) }}">{{ product.name }} - {{ product.brand.value }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
